{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2018",
    "sourceMap": true,
    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@types": ["@types"]
    },
    "types": ["@types/node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
